                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="fas-window-minimize" iconSize="17" />
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="maxOrNormalize" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="20.0" prefWidth="24.0" style="-fx-font-size: 10;" styleClass="jfx-button-green" text="+">
